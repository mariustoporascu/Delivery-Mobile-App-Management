<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodDeliveryApp.Views.MapsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FoodDeliveryApp.ViewModels"
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="Harta"
    x:DataType="local:MapsViewModel"
    Shell.PresentationMode="Animated">

    <StackLayout BackgroundColor="{AppThemeBinding Light=LightGray, Dark=Gray}">
        <Label
            FontSize="Large"
            HorizontalOptions="CenterAndExpand"
            Text="Locatii comenzi active"
            TextColor="Black" />
        <maps:Map
            x:Name="AppMap"
            HasScrollEnabled="True"
            HasZoomEnabled="True"
            IsVisible="True"
            MapType="Street" />
    </StackLayout>
</ContentPage>